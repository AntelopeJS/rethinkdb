{
  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "web": true
  },
  "hooks": {
    "before:init": [
      "pnpm lint"
    ],
    "before:release": [
      "pnpm run changelog"
    ]
  }
}
